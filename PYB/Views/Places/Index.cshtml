<!DOCTYPE html>
<html>
  <head>
    <title>List Of Places</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    @using PYB.Models
    <h1>List Of Places</h1>
    @if (Model.Count == 0)
    {
      <p>There are no places on your list. Go add some.</p>
    }
    <ul>
      @foreach (Places place in Model)
      {
        <li><a href='/places/@place.Id'><button class="btn btn-primary">@place.CityName</button></a></li>
      }
    </ul>
    <a href="/places/new"><button class="btn btn-primary">Add a new Place</button></a>
  </body>
</html>